<h1>AI Tools Page</h1>
<div class="container">
<table id="tools-table" class="table table-hover">
  <thead>
    <tr>
      {{#each data.[0]}}
        <th>
          {{@key}}
        </th>
      {{/each}}
      <th>delete</th>
    </tr>
  </thead>

  <tbody>
    {{#each data}}
      <tr>
        <td>{{this.tool_id}}</td>
        <td>{{this.tool_name}}</td>
        <td>{{this.tool_type}}</td>
        <td>{{this.price}}</td>
        <td>{{this.release_date}}</td>
        <td>{{this.category}}</td>
        <td><button type="button" class="btn btn-danger" onclick="deleteTool({{this.tool_id}})">Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>
