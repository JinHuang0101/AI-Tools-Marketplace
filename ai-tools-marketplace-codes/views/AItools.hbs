<h1>AI Tools Page</h1>
{{!-- table  --}}
<table id="tools-table" class="center">
     {{!-- header  --}}
  <thead>
    <tr>
      {{#each data.[0]}}
        <th>
          {{@key}}
        </th>
      {{/each}}
      <th>delete</th>
    </tr>
  </thead>

  <tbody>
     {{!-- data  --}}
    {{#each data}}
      <tr>
        <td>{{this.tool_id}}</td>
        <td>{{this.tool_name}}</td>
        <td>{{this.tool_type}}</td>
        <td>{{this.price}}</td>
        <td>{{this.release_date}}</td>
        <td>{{this.category}}</td>
        <td><button onclick="deleteTool({{this.tool_id}})">Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>

</body>
