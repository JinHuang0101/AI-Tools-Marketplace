<h1>Developer Page</h1>
<table id="developers-table" class="table table-hover">
  <thead>
    <tr>
      <th>Developer ID</th>
      <th>Developer Name</th>
      <th>Developer Location</th>
      <th>Developer Website</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    {{#each data}}
      <tr>
        <td>{{this.dev_id}}</td>
        <td>{{this.dev_name}}</td>
        <td>{{this.dev_location}}</td>
        <td>{{this.dev_website}}</td>
        <td><button type="button" class="btn btn-danger" onclick="deleteDev({{this.dev_id}})">Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>


