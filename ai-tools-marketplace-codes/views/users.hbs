<h1>Users Page</h1>
{{!-- table  --}}
<table id="users-table" class="center">
    {{!-- header  --}}
  <thead>
    <tr>
      <th>User ID</th>
      <th>User Name</th>
      <th>User Location</th>
      <th>User Website</th>
      <th>User Industry</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    {{!-- data  --}}
    {{#each data}}
      <tr>
        <td>{{this.user_id}}</td>
        <td>{{this.user_name}}</td>
        <td>{{this.user_location}}</td>
        <td>{{this.user_website}}</td>
        <td>{{this.user_industry}}</td>
        <td><button onclick="deleteUser({{this.user_id}})">Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>
